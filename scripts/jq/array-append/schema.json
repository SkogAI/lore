{
  "name": "array-append",
  "description": "Append item(s) to the end of an array at a specified path",
  "version": "1.0.0",
  "input": {
    "type": "object",
    "description": "Object containing an array field to append to"
  },
  "args": {
    "array_path": {
      "type": "string",
      "required": true,
      "description": "Dot-separated path to the array field (e.g., 'data.items')"
    },
    "value": {
      "type": "string",
      "required": true,
      "description": "JSON-encoded value to append (can be any JSON type - will be parsed)"
    }
  },
  "output": {
    "type": "object",
    "description": "Modified object with value appended to the array at the specified path"
  },
  "examples": [
    {
      "description": "Append object to existing array",
      "input": {"items": [{"id": 1}, {"id": 2}]},
      "args": {"array_path": "items", "value": "{\"id\":3}"},
      "output": {"items": [{"id": 1}, {"id": 2}, {"id": 3}]}
    },
    {
      "description": "Append string to array",
      "input": {"tags": ["red", "blue"]},
      "args": {"array_path": "tags", "value": "\"green\""},
      "output": {"tags": ["red", "blue", "green"]}
    },
    {
      "description": "Append to empty array",
      "input": {"items": []},
      "args": {"array_path": "items", "value": "\"first\""},
      "output": {"items": ["first"]}
    },
    {
      "description": "Append to non-existent path (creates array)",
      "input": {},
      "args": {"array_path": "new_array", "value": "\"item\""},
      "output": {"new_array": ["item"]}
    },
    {
      "description": "Append nested path",
      "input": {"data": {"items": [1, 2]}},
      "args": {"array_path": "data.items", "value": "3"},
      "output": {"data": {"items": [1, 2, 3]}}
    }
  ],
  "tags": ["array", "append", "push", "add", "crud"]
}
