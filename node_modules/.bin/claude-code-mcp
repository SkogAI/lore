#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/claude-code-mcp/claude-code-server/build/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/claude-code-mcp/claude-code-server/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/claude-code-mcp/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules:/home/skogix/lore/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/claude-code-mcp/claude-code-server/build/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/claude-code-mcp/claude-code-server/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/claude-code-mcp/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules/@kunihiros/node_modules:/home/skogix/lore/node_modules/.pnpm/@kunihiros+claude-code-mcp@0.1.2/node_modules:/home/skogix/lore/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@kunihiros/claude-code-mcp/claude-code-server/build/index.js" "$@"
else
  exec node  "$basedir/../@kunihiros/claude-code-mcp/claude-code-server/build/index.js" "$@"
fi
