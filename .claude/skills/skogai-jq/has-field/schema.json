{
  "name": "has-field",
  "description": "Check if a field exists at a given path in a JSON object",
  "version": "1.0.0",
  "input": {
    "type": "object",
    "description": "Any JSON object"
  },
  "args": {
    "path": {
      "type": "string",
      "required": true,
      "description": "Dot-separated path to check (e.g., 'user.profile.name')"
    }
  },
  "output": {
    "type": "boolean",
    "description": "True if the field exists at the path, false otherwise. Returns true even if the value is null, false, 0, or empty string."
  },
  "examples": [
    {
      "description": "Check for existing field",
      "input": {"user": {"name": "skogix"}},
      "args": {"path": "user.name"},
      "output": true
    },
    {
      "description": "Check for non-existent field",
      "input": {"user": {"name": "test"}},
      "args": {"path": "user.email"},
      "output": false
    },
    {
      "description": "Check for deeply nested field",
      "input": {"data": {"user": {"profile": {"age": 30}}}},
      "args": {"path": "data.user.profile.age"},
      "output": true
    },
    {
      "description": "Field exists with null value",
      "input": {"user": {"name": null}},
      "args": {"path": "user.name"},
      "output": true
    },
    {
      "description": "Field exists with false value",
      "input": {"settings": {"enabled": false}},
      "args": {"path": "settings.enabled"},
      "output": true
    }
  ],
  "tags": ["object", "field", "check", "existence", "validation"]
}
