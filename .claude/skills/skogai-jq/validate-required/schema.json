{
  "name": "validate-required",
  "description": "Validate that all required fields exist in a JSON object",
  "version": "1.0.0",
  "input": {
    "type": "object",
    "description": "Any JSON object to validate"
  },
  "args": {
    "required_fields": {
      "type": "string",
      "required": true,
      "description": "JSON array string of dot-separated field paths that must exist (e.g., '[\"name\",\"user.email\"]')"
    }
  },
  "output": {
    "type": "boolean",
    "description": "True if all required fields exist, false if any are missing. Note: Fields with null/false/0/\"\" values are considered to exist."
  },
  "examples": [
    {
      "description": "All required fields exist",
      "input": {"name": "skogix", "email": "test@example.com"},
      "args": {"required_fields": "[\"name\",\"email\"]"},
      "output": true
    },
    {
      "description": "Missing one required field",
      "input": {"name": "skogix"},
      "args": {"required_fields": "[\"name\",\"email\"]"},
      "output": false
    },
    {
      "description": "Nested field validation",
      "input": {"user": {"name": "skogix", "profile": {"age": 30}}},
      "args": {"required_fields": "[\"user.name\",\"user.profile.age\"]"},
      "output": true
    },
    {
      "description": "Field exists with null value (validation passes)",
      "input": {"name": null, "email": "test@example.com"},
      "args": {"required_fields": "[\"name\",\"email\"]"},
      "output": true
    },
    {
      "description": "Empty required fields list (always passes)",
      "input": {"anything": "value"},
      "args": {"required_fields": "[]"},
      "output": true
    }
  ],
  "tags": ["validation", "object", "required", "check"]
}
